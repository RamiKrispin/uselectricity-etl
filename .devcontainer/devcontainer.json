{
    "name": "US-Electricity-ETL",
    "image": "${localEnv:US_ELECTRICITY_IMAGE}",
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/envs/us_electricity_etl/bin/python"
            },
            "extensions": [
                "quarto.quarto",
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "rdebugger.r-debugger",
                "ms-vscode-remote.remote-containers",
                "yzhang.markdown-all-in-one",
                "reditorsupport.r",
                "redhat.vscode-yaml",
                "REditorSupport.r",
                "REditorSupport.r-lsp", 
                "RDebugger.r-debugger" 
            ]
        }
    },
    "mounts": [        
        "source=${localEnv:US_ELECTRICITY_DIR},target=/home/,type=bind,consistency=cache"],
    "remoteEnv": {
        "EIA_API_KEY": "${localEnv:EIA_API_KEY}"
    },
    "postCreateCommand": "radian"
}